import { useState, useCallback, useMemo } from "react";
import { z } from "zod";
import { createFormSchema } from "@/utils/validation";
export function useZodForm<T extends z.ZodType<any, any>>(
	schema: T,
	initialValues: Partial<z.infer<T>> = {},
) {
	const [values, setValues] = useState<Partial<z.infer<T>>>(initialValues);
	const [errors, setErrors] = useState<Record<string, string>>({});
	const [touched, setTouched] = useState<Record<string, boolean>>({});
	const formSchema = useMemo(() => createFormSchema(schema), [schema]);
	const setValue = useCallback(
		(field: keyof z.infer<T>, value: any) => {
			setValues((prev) => ({ ...prev, [field]: value }));
			const validation = formSchema.validateField(field, value);
			if (!validation.valid && validation.error) {
				setErrors((prev) => ({ ...prev, [field]: validation.error! }));
			} else {
				setErrors((prev) => {
					const newErrors = { ...prev };
					delete newErrors[field as string];
					return newErrors;
				});
			}
		},
		[formSchema],
	);
	const handleBlur = useCallback(
		(field: keyof z.infer<T>) => {
			setTouched((prev) => ({ ...prev, [field]: true }));
			const value = values[field];
			const validation = formSchema.validateField(field, value);
			if (!validation.valid && validation.error) {
				setErrors((prev) => ({ ...prev, [field]: validation.error! }));
			}
		},
		[values, formSchema],
	);
	const validateForm = useCallback(() => {
		const result = formSchema.validateForm(values);
		setErrors(result.errors);
		return result.valid;
	}, [values, formSchema]);
	const resetForm = useCallback(
		(newValues: Partial<z.infer<T>> = initialValues) => {
			setValues(newValues);
			setErrors({});
			setTouched({});
		},
		[initialValues],
	);
	return {
		values,
		errors,
		touched,
		setValue,
		handleBlur,
		validateForm,
		resetForm,
		isDirty: Object.keys(touched).length > 0,
		isValid: Object.keys(errors).length === 0,
	};
}
</file>

