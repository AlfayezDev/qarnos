			"Breakfast" | "Lunch" | "Dinner",
			"info" | "primary" | "error"
		> = {
			Breakfast: "info",
			Lunch: "primary",
			Dinner: "error",
		};
		const translatedPeriod = t(`periods.${summary.period.toLowerCase()}`);
