<file path="apps/merchant-app/utils/validation.ts">
import { z } from "zod";
export const createFormSchema = <T extends z.ZodType<any, any>>(schema: T) => {
	return {
		schema,
		validateField: (
			field: keyof z.infer<T>,
			value: any,
		): { valid: boolean; error?: string } => {
			const fieldSchema = schema.shape[field] as z.ZodType<any>;
			if (!fieldSchema) {
				return { valid: true };
			}
			const result = fieldSchema.safeParse(value);
			if (result.success) {
				return { valid: true };
			}
			const [error] = result.error.errors;
			return {
				valid: false,
				error: error?.message,
			};
		},
		validateForm: (
			values: Partial<z.infer<T>>,
		): {
			valid: boolean;
			errors: Record<string, string>;
		} => {
			const result = schema.safeParse(values);
			if (result.success) {
				return { valid: true, errors: {} };
			}
			const errors: Record<string, string> = {};
			result.error.errors.forEach((error) => {
				const field = error.path[0] as string;
				errors[field] = error.message;
			});
			return { valid: false, errors };
		},
	};
};
export const nameSchema = z
	.string()
	.min(1, "Name is required")
	.max(100, "Name is too long");
export const priceSchema = z
	.number({
		invalid_type_error: "Price must be a number",
		required_error: "Price is required",
	})
	.positive("Price must be greater than 0")
	.or(
		z
			.string()
			.regex(/^\d+(\.\d{1,2})?$/, "Invalid price format")
			.transform(Number),
	);
export const caloriesSchema = z
	.number({
		invalid_type_error: "Calories must be a number",
		required_error: "Calories are required",
	})
	.nonnegative("Calories cannot be negative")
	.int("Calories must be a whole number")
	.or(
		z
			.string()
			.regex(/^\d+$/, "Calories must be a whole number")
			.transform(Number),
	);
export const descriptionSchema = z
	.string()
	.min(10, "Description must be at least 10 characters")
	.max(1000, "Description must be less than 1000 characters");
export const ingredientsSchema = z
	.array(z.string().min(1, "Ingredient must not be empty"))
	.min(1, "At least one ingredient is required");
export const imageUrlSchema = z
	.string()
	.url("Image must be a valid URL")
	.or(z.string().length(0));
