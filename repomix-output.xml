						value={value}
						onValueChange={handleSwitchValueChange}
						disabled={disabled}
						trackColor={{
							false: theme.colors.backgroundAlt,
							true: theme.colors.primary,
						}}
						thumbColor={
							Platform.OS === "ios"
								? undefined
